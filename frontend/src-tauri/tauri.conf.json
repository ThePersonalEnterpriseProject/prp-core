{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:5173",
        "distDir": "../build",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "PRP-core",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true,
                "sidecar": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.prp-core.app",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "externalBin": [
                "binaries/api"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "PRP-core",
                "width": 1200,
                "height": 800
            }
        ]
    }
}